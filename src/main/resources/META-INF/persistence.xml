<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="DentalClinicPU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>top.jonakls.dentalclinic.entity.person.DentistEntity</class>
        <class>top.jonakls.dentalclinic.entity.person.PatientEntity</class>
        <class>top.jonakls.dentalclinic.entity.person.PersonEntity</class>
        <class>top.jonakls.dentalclinic.entity.person.ResponsibleEntity</class>
        <class>top.jonakls.dentalclinic.entity.person.SecretaryEntity</class>
        <class>top.jonakls.dentalclinic.entity.HoursEntity</class>
        <class>top.jonakls.dentalclinic.entity.TurnEntity</class>
        <class>top.jonakls.dentalclinic.entity.UserEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3308/dentist_clinic?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
